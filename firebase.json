{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/homepage", "destination": "/homepage.html" },
      { "source": "/profile", "destination": "/profile.html" },
      { "source": "/collections", "destination": "/collections.html" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
